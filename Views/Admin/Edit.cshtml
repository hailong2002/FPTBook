@model FPTBook.Models.Admin

<h3 class="text text-warning container" style="text-align: center">Edit Information</h3>
<div class="container col-md-8">
    <form method="post"  asp-controller="Admin" asp-action="Edit">
        <div class="form-group">
            <label class="h6 text-primary" asp-for="@Model.Name"></label>
            <input class="form-control" asp-for="@Model.Name" />
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label class="h6 text-primary" asp-for="@Model.Email"></label>
            <input class="form-control" asp-for="@Model.Email" />
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
    
        <div class="form-group">
            <label class="h6 text-primary" asp-for="@Model.Birthday"></label>
            <input class="form-control" asp-for="@Model.Birthday" />
            <span class="text-danger" asp-validation-for="@Model.Birthday"></span>
        </div>
        <div class="form-group">
            <label class="h6 text-primary" asp-for="@Model.Address"></label>
            <input class="form-control" asp-for="@Model.Address" />
            <span class="text-danger" asp-validation-for="@Model.Address"></span>
        </div>
        <div class="form-group">
            <label class="h6 text-primary">Image</label><br />
            <img src="@Model.Image" width="120" height="120" /><br />
            <input class="form-control mt-3" asp-for="@Model.Image" />
            <span class="text-danger" asp-validation-for="@Model.Image"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" style="color: white" value="Edit" />
            <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>



